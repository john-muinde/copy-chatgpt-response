{
    "manifest_version": 2,
    "version": "1.0",
    "name": "copy code",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "main.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "permissions": [
        "webNavigation",
        "tabs",
        "<all_urls>",
        "webRequest",
        "webRequestBlocking"
    ]
}