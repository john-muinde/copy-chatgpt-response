{
    "manifest_version": 2,
    "version": "1.0",
    "name": "Copy Chatgpt Responses",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "main.js"
            ],
            "run_at": "document_start"
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "permissions": [
        "webNavigation",
        "tabs",
        "<all_urls>",
        "webRequest",
        "webNavigation"
    ],
    "icons": {
        "128": "images/logo.png"
    }
}